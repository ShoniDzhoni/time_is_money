{
	"manifest_version": 2,

	"name": "Time is Money",
	"short_name": "t=$",
	"description": "This extension converts prices into hours of labor.",
	"version": "1.8.0",

	"permissions": ["tabs"],

	"background": {"scripts": ["background.js"]},

	"options_page": "options.html",

	"browser_action": {
		"name": "Time is Money",
		"icons": ["icon.png"],
		"default_icon": "icon.png",
		"default_popup": "options.html"
	},
	"content_scripts": [ {
		"js": [ "jquery-1.11.0.min.js", "convert.js" ],
		"matches": [ "http://*/*", "https://*/*"]
	}]
}