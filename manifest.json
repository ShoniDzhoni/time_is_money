{
	"manifest_version": 2,

	"name": "Time Is Money",
	"short_name": "t=$",
	"description": "See prices as hours of work!",
	"version": "2.0.0",

	"permissions": ["tabs"],

	"background": {"scripts": ["jquery-1.11.0.min.js", "background.js"]},

	"options_page": "options.html",

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"browser_action": {
		"name": "Time Is Money",
		"default_icon": "icon48.png",
		"default_popup": "options.html"
	},
	"content_scripts": [ {
		"js": [ "jquery-1.11.0.min.js", "convert.js" ],
		"matches": [ "http://*/*", "https://*/*"]
	}]
}
